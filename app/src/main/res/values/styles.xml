<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--按钮类型属性-->
    <style name="btn_style">
        <item name="android:background">@color/title_text</item>
        <item name="android:textColor">@color/main_bg</item>
        <item name="android:textSize">@dimen/text_btn</item>
    </style>


    <!--全局设定-->
    <style name="my_notitle" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <!--theme全屏-->
    <style name="fullscreen" parent="my_notitle">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
